@model IEnumerable<TCC_2._0.Models.PRODUTO>


@{
    ViewBag.Title = "Index";
}



<body class="fundo">
    <p><a class="btn btn-primary" href="/Produto/Criar">Criar novo Produto &raquo;</a></p>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Descrição</th>
                <th scope="col">Categoria</th>
                <th scope="col">Imagem </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td scope="row">@item.PROID</td>
                    <td>@item.PRODESCRICAO</td>
                    <td> @item.CATID</td>
                    <td>
                        @{
                            if (item.PROIMAGEM != null)
                            {
                                var base64 = Convert.ToBase64String(item.PROIMAGEM);
                                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                <img src='@imgSrc' style="max-width:100px; max-height:100px;" />
                            }

                        }

                    </td>






                    <td>

                        <a href="/produto/editar?id=@item.PROID"><button type="button" class="btn btn-warning">Editar</button></a>
                        <a href="/produto/deletar?id=@item.PROID"><button type="button" class="btn btn-danger">Deletar</button></a>

                    </td>
                </tr>
            }




        </tbody>
    </table>


</body>


<style>

    tr {
        color: white;
    }

  


    .fundo {
    background-image: url("https://st.depositphotos.com/2069237/2231/i/450/depositphotos_22310611-stock-photo-blackboard-chalkboard-texture.jpg");
      background-repeat: no-repeat;
     
     background-attachment: fixed;
     background-size: 100% 100%;
}    
    
</style>








<p><a href="/home/projetos" class="btn btn-primary">Voltar &raquo;</a></p>
